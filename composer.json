{
    "name": "huynv55/zii",
    "description": "The Zii Framework.",
    "authors": [
        {
            "name": "nguyen huy",
            "email": "huynv55@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2.0",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "league/plates": "^3.5",
        "mongodb/mongodb": "^1.8",
        "monolog/monolog": "^3.2",
        "symfony/var-dumper": "^5.1",
        "vlucas/phpdotenv": "^5.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "App/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "prefer-stable": true
}
